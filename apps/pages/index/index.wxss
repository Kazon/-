@import '../../icon-font/iconfont.wxss';

page{
  display: flex;
  flex-direction: column;
  height: calc(100vh + 220rpx);
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.scrollview{
  display: flex;
  white-space: nowrap;
}

/* 取消scroll-view滚动条的显示 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/*遮盖层-----------------------------*/

.cover{
  width: 750rpx;
  height: 100vh;
  opacity: 0.4;
  position: absolute;
  background-color: black;
  top: 0;
  overflow: hidden;
  z-index: 1;
}

/*-----------------------------------*/

.top-shop{
  background: url(data:image/jpg;base64,) repeat-x;
  height: 200rpx;
  padding: 20rpx 20rpx 0 40rpx;
}

.shop-logo{
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.shop-name{
  display: inline-block;
  vertical-align: top;
  margin: 0 0 10rpx 20rpx;
  font-size: 40rpx;
  font-family: 楷体;
  color: white;
}

.shop-notice{
  display: block;
  font-size: 24rpx;
}

.shop-search{
  display: block;
  width: 40rpx;
  height: 40rpx;
  float: right;
}

.shop-discount{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.center-tab{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #666;
  border-bottom: 2rpx #EAEAEA solid;
}

.center-tab view{
  display: inline-block;
  width: 160rpx;
  text-align: center;
}

.tab-show{
  color: #0881EC;
}

.shop-hide{
  display: none;
}

.shop-show{
  height: calc(100vh - 200rpx);
  width: 100vw;
}

.scroll-item{
  height: calc(100vh - 200rpx);
}

.scroll-category{
  width: 160rpx;
  height: calc(100vh - 200rpx);
}

.scroll-item{
  margin: 10rpx 30rpx 0 20rpx;
}

.shop-category{
  background-color: #F5F5F5;
  height: 100rpx;
  width: 160rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
  color: #2C2C2C;
  border-bottom: 2rpx #ECECEC solid; 
}

.cate-active{
  background-color: #fff;
  color: #000;
}

.shop-category-check{
  background-color: #fff;
  color: #000;
}

.shop-item-category{
  font-size: 28rpx;
  color: #6B6B6B;
  margin-bottom: 30rpx;
}

.shop-acti{
  margin: 20rpx 0 0 40rpx;
  font-size: 30rpx;
  height: calc(100vh - 110rpx);
}

.shop-car{
  position: fixed;
  bottom: 0;
  z-index: 4;
}

.shop-car-bottom{
  z-index: 4;
  height: 100rpx;
  box-shadow : 0 -2rpx 10rpx #999;
  width:750rpx;
}

.shop-car-show{
  width: 525rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #f20;
  line-height: 100rpx;
}

.shop-car-img{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -30rpx;
  left: 40rpx;
  background-color: #1786EB;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  font-size: 52rpx;
}

.shop-car-img .car-totalcount{
  display: block;
  position: absolute;
  top: 8rpx;
  right: 10rpx;
  background-color: #f20; 
  width: 30rpx;
  height: 26rpx;
  border-radius: 13rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 26rpx;
}

.shop-car-show text{
  display: block;
  margin-left: 150rpx;
}

.shop-car-ready{
  width: 225rpx;
  background-color: #1786EB;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.shop-car-detail{
  position: absolute;
  bottom: 100rpx;
  width: 750rpx;
  transition: height .3s ease;
  z-index: -1;
  height: 0;
  background-color: #F6F6F6;
}

.car-detail-show{
  height: 350rpx;
}

.car-detail-top{
  width: 690rpx;
  height: 80rpx;
  margin: 0 auto;
}

.car-detail-text{
  display: block;
  margin: auto 0;
  border-left: 6rpx solid #2E95E9;
  font-size: 32rpx;
  width: 148rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
}

.car-detail-img{
  width: 100rpx;
  height: 40rpx;
  margin: auto 0;
  font-size: 34rpx;
  line-height: 40rpx;
}

.car-detail-group{
  height: 270rpx;
  background-color: #fff;
}

.car-detail-item{
  height: 89rpx;
  width: 690rpx;
  margin: 0 auto;
  border-bottom: 2rpx #ECECEC dashed;
  line-height: 90rpx;
}

.car-item-name{
  font-size: 28rpx;
  color: #414141;
}

.car-item-price{
  width: 280rpx;
}

.car-item-p{
  color: #f20;
}