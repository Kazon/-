@import '../../icon-font/iconfont.wxss';

page{
  background-color: #F0F0F0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scrollview{
  display: flex;
  white-space: nowrap;
  height: calc(100vh - 100rpx);
}

.flex{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 710rpx;
  justify-content: space-between;
}

.tips{
  background-color: #0B8CE8;
  height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 20rpx;
  line-height: 70rpx;
}

.order-detail{
  background-color: #fff;
  margin-top: 10rpx;
}

.form-item{
  height: 90rpx;
  width: 670rpx;
  border-bottom: 2rpx #EEEEEE solid;
  font-size: 30rpx;
  line-height: 90rpx;
}

.totalPrice{
  flex-direction: row;
}

.totalPrice text{
  color: #f20;
}

.desk{
  justify-content: center;
}

.deskid{
  width: 630rpx;
  height: 50rpx;
}

.taste{
  height: 160rpx;
  justify-content: center;
  border-bottom: 4rpx #e5e5e5 dashed;
}

.taste-detail{
  height: 120rpx;
  width: 630rpx;
  font-size: 30rpx;
  color: #808080;
  line-height: 60rpx;
}

.detail-title{
  height: 50rpx;
  width: 670rpx;
  border-left: 10rpx #078AEA solid;
  line-height: 50rpx;
  text-indent: 10rpx;
}

.detail-item{
  height:160rpx;
}

.bottom{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  z-index: 2;
  height: 100rpx;
  width: 100vw;
  box-shadow: 0 -2rpx 10rpx #999;
}

.choice{
  width: 50vw;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
}

.back{
  background-color: #fff;
  color: #000;
}

.go{
  background-color: #1C8EEF;
  color: #fff;
}
