@import '../../icon-font/iconfont.wxss';
page{
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 取消scroll-view滚动条的显示 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.box{
  width: 690rpx;
  height: 340rpx;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.order-id{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #040404;
  border-bottom: 2rpx solid #F5F5F5;
}

.order-detail{
  height: 200rpx;
  display: flex;
  white-space: nowrap;
  border-bottom: 2rpx solid #F5F5F5;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.detail-item{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #040404;
}

.total{
  margin-top: 10rpx;
  border: none;
}